<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.VideoCall.CallingActivity">
    <ImageView
        android:contentDescription="Image of Person"
        android:id="@+id/profile_image_calling"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/calluser"
        android:scaleType="centerCrop">

    </ImageView>
    <TextView
        android:id="@+id/name_calling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:maxLines="5"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_above="@+id/txt">

    </TextView>
    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calling..."
        android:textSize="20sp"
        android:maxLines="5"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_above="@+id/linear_layout1">

    </TextView>
    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:contentDescription="End Call"
            android:id="@+id/cancel_call"
            android:layout_width="110dp"
            android:layout_height="105dp"
            android:src="@drawable/cancel_call"/>
    </LinearLayout>
</RelativeLayout>